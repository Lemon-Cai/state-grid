{
  "extends": "@vue/tsconfig/tsconfig.dom.json",

  "compilerOptions": {
    "composite": true,

    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",

    /* Linting */
    // "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": "./",
    "paths": {
      "@apps/components": ["packages/components"]
    }
  },
  "exclude": ["node_modules", "**/dist", "vite.config.*", "packages/theme-chalk/*"],
  "include": [
    "packages",
    "packages/**/src/**/*.ts",
    "packages/**/*.tsx",
    "packages/**/*.vue",
    "apps",
    "apps/**/*.ts",
    "apps/**/*.tsx",
    "apps/**/*.vue",
    "typings/**/*.d.ts",
  ]
}
