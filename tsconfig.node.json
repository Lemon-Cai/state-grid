{
  "extends": "@tsconfig/node18/tsconfig.json",

  "include": [
    "vite.config.*",
    "vitest.config.*",
    "cypress.config.*",
    "nightwatch.conf.*",
    "playwright.config.*",
    "packages/**/vite.config.ts",
    "scripts/**/*",
    "packages/utils/**/*.ts",
    "packages/theme-chalk/*"
  ],
  "compilerOptions": {
    "composite": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "types": ["node"]
  }
}
